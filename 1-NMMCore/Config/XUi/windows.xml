<configs>

	<!--set xpath="/windows/window[@name='windowTargetBar']/@visibility">always</set--> <!-- Set in Score -->

<append xpath="/windows" >

		<window name="btnNMM" controller="ServerInfo" anchor="CenterCenter" pos="0,0" width="800" height="671" depth="-2">
			<texture depth="3" color="[white]" texture="@modfolder:UIAtlases/ItemIconAtlas/NMMnpcLogo.png" name="NMMnpcLogo" anchor_left="#cam,0.5,-20" anchor_bottom="#cam,0.5,70" anchor_right="#cam,0.5,-20" anchor_top="#cam,0.5,490" pivot="center" keep_aspect_ratio="BasedOnHeight" aspect_ratio="2.1" />
			<label name="ServerDescription" />
			<label depth="2" pos="-300,222" height="450" width="600" name="ServerWebsiteURL" text="https://community.7daystodie.com/topic/28810-not-medieval-mod-a-fantasy-modpack/" justify="center" style="press, hover" font_size="30" upper_case="false" />
		</window>

</append>

	<!-- KhaineGB's 60 Slot Backpack Mod -->

    <!-- update the overall backpack size -->
    <set xpath="/windows/window[@name='windowBackpack']/@width">604</set>
    <set xpath="/windows/window[@name='windowBackpack']/@height">373</set>
    
    <!-- increase the panel size -->
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/@height">330</set>
    
    <!-- adjust the rows, heights, and their cell equivalent -->
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@rows">6</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cols">10</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cell_height">60</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/@cell_width">60</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/sprite[@name='backgroundMain']/@width">601</set>
    <set xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/sprite[@name='backgroundMain']/@height">363</set>
	
	<!-- adjust windowlooting to match the size of the new player dropped backpack container -->
    <set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/@rows">10</set>
    <set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/@cols">10</set>

	<remove xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']/backpack_item_stack"></remove>
	
	<append xpath="/windows/window[@name='windowBackpack']/panel[@name='content']/grid[@name='inventory']">
       <kh60_backpack_item_stack name="0"/>
	</append>

	<!-- KhaineGB's Inventory Lockable Slots Mod - Much thanks -->

	<!-- Since A20 already has the combo box, we're just enabling it -->
	<append xpath="/windows/window[@name='windowBackpack']/panel[@name='header']/rect[@controller='ContainerStandardControls']"> 		
		<combobox depth="3" name="cbxLockedSlots" pos="120,-7" width="100" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="45" value_wrap="true" value_increment="1" />
	</append>
	
	<append xpath="/windows/window[@name='windowVehicleStorage']/panel[@name='header']/rect[@controller='ContainerStandardControls']">		
		<combobox depth="3" name="cbxLockedSlots" pos="70,-7" width="100" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="{container_slots}" value_wrap="true" value_increment="1" />
	</append>

</configs>